<yandex>
    <storage_configuration>
        <!-- Define the path for storing backups -->
        <disks>
            <s3>
                <endpoint>https://s3.amazonaws.com</endpoint>
                <access_key>YOUR_S3_ACCESS_KEY</access_key>
                <secret_key>YOUR_S3_SECRET_KEY</secret_key>
                <bucket>your-backup-bucket</bucket>
                <!-- Specify the region if applicable -->
                <!-- <region>us-east-1</region> -->
                <!-- Optionally specify the path within the bucket -->
                <!-- <path>clickhouse-backups/</path> -->
                <!-- Optionally specify the compression codec for backups -->
                <!-- <compression_codec>gzip</compression_codec> -->
            </s3>
        </disks>
        <!-- Define the settings for data retention and backup scheduling -->
        <backup>
            <!-- Enable or disable automatic backups -->
            <enable>true</enable>
            <!-- Retention policy: number of full backups to keep -->
            <full_backup_days>7</full_backup_days>
            <!-- Retention policy: number of parts for incremental backups to keep -->
            <shadow_days>1</shadow_days>
            <!-- Schedule backups to run at specific times -->
            <quorum>2</quorum>
            <schedule>
                <interval_hours>24</interval_hours>
                <merge_old_parts>1</merge_old_parts>
            </schedule>
            <!-- Specify the maximum number of backup parts per disk -->
            <remove_old_parts>1</remove_old_parts>
            <!-- Specify the maximum number of concurrent backup processes -->
            <remove_to>1</remove_to>
            <!-- Enable or disable parallel compression during backup -->
            <min_compress_block_size>536870912</min_compress_block_size>
            <min_compress_part_size>536870912</min_compress_part_size>
            <!-- Specify the number of concurrent compression threads -->
            <threads>8</threads>
            <!-- Specify the path for storing temporary backup files -->
            <path>/backups/tmp</path>
            <!-- Optionally set the priority for backup tasks -->
            <!-- <priority>1</priority> -->
        </backup>
    </storage_configuration>
</yandex>
